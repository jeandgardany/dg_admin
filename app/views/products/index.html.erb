   <% end %>
</div>

<%- model_class = Product -%>
<div class="page-header">
  <h2><%= "Lista de Produtos" %></h2>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:code) %></th>
      <th><%= "Nome" %></th>
