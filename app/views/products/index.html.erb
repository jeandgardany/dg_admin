      <th><%= "Categoria" %></th>
      <th><%= "Data" %></th>
      <th><%= "AÃ§Ãµes" %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.code %></td>
        <td><%= product.name %></td>
        <td><%= format_valor(product.price) %></td>
        <td><%= link_to image_tag(product.photo.large_thumb.url), product %></td>
